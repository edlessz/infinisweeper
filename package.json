{
	"name": "infinisweeper",
	"private": true,
	"version": "3.1",
	"type": "module",
	"scripts": {
		"build": "bunx tsc -b && bunx vite build && bunx cap sync",
		"dev": "bunx vite",
		"dev:android": "bunx cap sync android && bunx cap run android",
		"preview": "bunx vite preview",
		"write-cname": "node -e \"require('fs').writeFileSync('dist/CNAME', 'infinisweeper.net')\"",
		"deploy": "bun run build && bun run write-cname && bunx gh-pages -d dist",
		"check": "bunx biome check --write"
	},
	"dependencies": {
		"@capacitor/android": "^7.4.4",
		"@capacitor/app": "^7.1.1",
		"@capacitor/core": "^7.4.4",
		"@capacitor/ios": "^7.4.4",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.8",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/react-router": "^1.141.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"fast-simplex-noise": "^4.0.0",
		"firebase": "^12.7.0",
		"lucide-react": "^0.562.0",
		"next-themes": "^0.4.6",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"seedrandom": "^3.0.5",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@capacitor/cli": "^7.4.4",
		"@tanstack/router-plugin": "^1.142.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/seedrandom": "^3.0.8",
		"@vitejs/plugin-react": "^4.7.0",
		"gh-pages": "^6.3.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "5.9.3",
		"vite": "^6.4.1"
	}
}
